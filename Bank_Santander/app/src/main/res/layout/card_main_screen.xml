<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewInfoData" android:layout_marginEnd="87dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text=""
            android:textColor="#333333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoData"
            app:layout_constraintTop_toTopOf="@+id/textViewInfoName"
            app:layout_constraintBottom_toBottomOf="@+id/textViewInfoName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"/>
    <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp" app:srcCompat="@mipmap/ic_shape_icon"
            android:id="@+id/imageViewArrow"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/textViewInfoData" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewInfoName" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/textViewInfoData"
            app:layout_constraintBottom_toBottomOf="@+id/textViewInfoData"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="13dp" app:srcCompat="@mipmap/ic_underscore_icon"
            android:id="@+id/imageViewUnder"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/imageViewArrow"
            app:layout_constraintStart_toStartOf="@+id/imageViewArrow"
            app:layout_constraintTop_toTopOf="@+id/imageViewArrow"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewArrow" android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>