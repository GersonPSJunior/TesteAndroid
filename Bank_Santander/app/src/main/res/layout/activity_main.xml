<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:background="@color/colorRed"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="auto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemBackground="@drawable/selector_navigation"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/menu_navigation" android:textAlignment="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewRiskTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="38dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textViewInfoTitle"
                android:layout_marginStart="38dp" android:id="@+id/constraintLayout" android:layout_marginTop="26dp">
            <include layout="@layout/risk_bar_layout"
                     app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                     android:id="@+id/include"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:layout_width="19dp"
                android:layout_height="24dp" app:srcCompat="@mipmap/ic_logout_icon"
                android:id="@+id/imageView" android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textViewInvestment"
                android:layout_marginStart="91dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewInvestment"
                app:layout_constraintTop_toTopOf="@+id/textViewInvestment"/>
        <TextView
                android:text="Fundo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewInfoTitle"
                app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginEnd="79dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="CDI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"/>
        <TextView
                android:text="no mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/textViewFundInMonth"
                android:layout_marginEnd="112dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="29dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/textViewFundInMonth"
                app:layout_constraintBottom_toTopOf="@+id/textViewFundInYear"/>
        <TextView
                android:text="no ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/textViewFundInYear"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="29dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/textViewFundInYear" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewFundTwelveMonth"/>
        <TextView
                android:text="12 meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/textViewFundTwelveMonth"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="29dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/textViewFundTwelveMonth"
                app:layout_constraintBottom_toBottomOf="@+id/textViewFundTwelveMonth"/>
        <TextView
                android:text="0,3%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFundInMonth" app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <TextView
                android:text="13,01%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFundInYear" app:layout_constraintEnd_toEndOf="@+id/textViewFundInMonth"
                app:layout_constraintStart_toStartOf="@+id/textViewFundInMonth" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewFundInMonth"/>
        <TextView
                android:text="17,9%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewFundTwelveMonth"
                app:layout_constraintEnd_toEndOf="@+id/textViewFundInYear"
                app:layout_constraintStart_toStartOf="@+id/textViewFundInYear" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewFundInYear"/>
        <TextView
                android:text="0,3%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCDIInMonth" app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <TextView
                android:text="12,08%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewCDIInYear"
                app:layout_constraintEnd_toEndOf="@+id/textViewCDIInMonth"
                app:layout_constraintStart_toStartOf="@+id/textViewCDIInMonth" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewCDIInMonth"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="17,6%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCDITwelveMonth" app:layout_constraintEnd_toEndOf="@+id/textViewCDIInYear"
                app:layout_constraintStart_toStartOf="@+id/textViewCDIInYear" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewCDIInYear"
                app:layout_constraintHorizontal_bias="1.0"/>

        <View android:layout_width="0dp" android:layout_height="2dp"
              android:background="#DB1616"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
              app:layout_constraintTop_toBottomOf="@+id/textViewCDITwelveMonth" android:layout_marginTop="26dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>